@model FinalProject322.Models.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <br />
    <h4> @Model.Name Detayları</h4>
    <hr />


    <form method="post">
        <div class="p-4 border rounded row"></div>
        <div class="col-3">
            <img src="~/admin/uploads/@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <label asp-for="Name" class="control-label" />
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-8">
                    <label asp-for="Description" class="control-label" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price" class="control-label"></label>
                </div>
                <div class="col-8">
                    <label asp-for="Price" class="control-label" />
                </div>

            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="CategoryId" class="control-label"></label>
                </div>
                <div class="col-8">
                    <label asp-for="CategoryId" class="control-label" />
                </div>

            </div>
    </form>
</div>

