@model FinalProject322.Models.Product


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.css">
<script src="//cdnjs.cloudflare.com/ajax/libs/jodit/3.1.92/jodit.min.js"></script>
<div class="container">
    <br />
    <br />
    <h4>Ürün Ekle</h4>
    <hr />


    <form method="post" enctype="multipart/form-data">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-3">
                @Html.TextAreaFor(m => m.Description)
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Quantity" class="control-label"></label>
            </div>
            <div class="col-3">
                <input asp-for="Quantity" class="form-control" />
            </div>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CategoryId" class="control-label"></label>
            </div>
            <div class="col-3">
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image" class="control-label"></label>
            </div>
            <div class="col-3">
                <input type="file" id="FileUrl" name="FileUrl" multiple class="form-control" />
            </div>

        </div>


        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Ekle" class="btn btn-info form-control" />
                    </div>
                    <div class="col-6">

                        <a asp-action="Index" class="btn btn-success form-control">Listeye Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>


<div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var editor = new Jodit('#Description');
    </script>
}


