<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/admin/images/icon/logo.png" alt="CoolAdmin">
                            </a>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                               
                                    <form id="account" method="post">
                                        <div class="form-group">
                                            <label>Ad</label>
                                            <input class="au-input au-input--full" type="text" name="ad">
                                            <span asp-validation-for="Input.Ad" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Soyad</label>
                                            <input class="au-input au-input--full" type="text" name="soyad">
                                            <span asp-validation-for="Input.Soyad" class="text-danger"></span>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-2">
                                                <label asp-for="Input.Email" class="control-label " type="text" ></label>
                                            </div>
                                            <div class="col-7">
                                                <input asp-for="Input.Email" class="form-control au-input au-input--full" />
                                            </div>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Telefon</label>
                                            <input class="au-input au-input--full" type="text" name="telefon">
                                            <span asp-validation-for="Input.Telefon" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label>Adres</label>
                                            <input class="au-input au-input--full" type="text" name="adres">
                                            <span asp-validation-for="Input.Adres" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <label>İl</label>
                                            <input class="au-input au-input--full" type="text" name="il">
                                            <span asp-validation-for="Input.il" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label>Posta Kodu</label>
                                            <input class="au-input au-input--full" type="text" name="posta">
                                            <span asp-validation-for="Input.posta" class="text-danger"></span>
                                        </div>
                                        <div class="login-checkbox">
                                            <label>
                                                <input type="checkbox" name="aggree">Üyelik sözleşmesini kabul ediyorum.
                                            </label>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="au-btn au-btn--block au-btn--green m-b-20">Üye Ol</button>
                                        </div>

                                        @*<div class="form-group row">
                            <div class="col-2 offset-2">
                                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                            </div>
                        </div>*@
                                    </form>
                                    </div>
                                
                                    <div class="register-link">
                                        <p>
                                            Zaten üye misin?
                                            <a href="Identity/Account/Login">Giriş Yap</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
    <!-- Jquery JS-->
    <script src="~/admin/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/admin/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/admin/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/admin/vendor/slick/slick.min.js"></script>
    <script src="~/admin/vendor/wow/wow.min.js"></script>
    <script src="~/admin/vendor/animsition/animsition.min.js"></script>
    <script src="~/admin/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/admin/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/admin/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/admin/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/admin/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/admin/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/admin/vendor/select2/select2.min.js"></script>
    <!-- Main JS-->
    <script src="~/admin/js/main.js"></script>
</body>
</html>
